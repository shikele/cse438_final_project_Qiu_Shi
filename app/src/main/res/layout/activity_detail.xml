<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#fff"
    tools:context=".activities.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back_button"
            android:layout_marginStart="5dp"
            android:layout_width="35dp"
            android:layout_height="40dp"

            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/popular_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/muli"
            android:textSize="60sp"
            android:textColor="#80000000"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />
    </LinearLayout>






    <ImageView
        android:id="@+id/popular_food_image"
        android:alpha="0.75"
        android:background="@drawable/round_outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />




    <TextView
        android:id="@+id/popular_food_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:textColor="#80000000"
        style="@style/TextName"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popular_food_description">
        <TextView
            android:id="@+id/popular_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:textStyle="bold"
            android:textColor="#80000000"
            style="@style/TextName"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />




        <ImageView
            android:id="@+id/discount_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/popular_food_price"
            android:layout_alignEnd="@+id/popular_food_price"
            android:layout_alignBottom="@+id/popular_food_price"
            android:background="@drawable/round_outline"
            android:layout_alignTop="@+id/popular_food_price"

            >

        </ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli"
        android:textStyle="bold"
        android:textColor="#FF4040"
        style="@style/TextName"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />



    <ImageView
        android:id="@+id/soldOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/orderFood"
        android:text="Order"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</LinearLayout>