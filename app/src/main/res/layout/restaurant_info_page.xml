<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/info"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#000000"
        android:textSize="32dp"
        android:text="CC's steakhouse"

        >

    </TextView>

    <ImageView
        android:id="@+id/screenshot_map"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/map">

    </ImageView>





    <TextView
        android:id="@+id/hint"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="XX N Central Ave \nClayton, MO 63105"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/screenshot_map">
    </TextView>

    <TextView
        android:id="@+id/open_time"
        android:layout_width="240dp"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        android:text="Bussiness Time: \n 7am - 9pm, M-F"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint">
    </TextView>


    <TextView
        android:id="@+id/contact"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="314-888-8888\n deli@steak.co"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_time">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch to different\n location?"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/contact"
        >

    </Button>






</androidx.constraintlayout.widget.ConstraintLayout>